{% extends 'base.html.twig' %}

{% block title %}Hello World!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Hello World! âœ…</h1>

    Existing items:
    <ul>
    	{% for game in games %}
			<li>
				<a href="{{ path('game', {'id': game.id}) }}">{{ game }}</a> : 
				{{ game.members|join(', ') }} 
				{% if app.user in game.members %} 
					<a href="{{ path('quit_game', {'id': game.id}) }}">Quit</a> 
				{% else %} 
					<a href="{{ path('join_game', {'id': game.id}) }}">Join</a> 
				{% endif %}
			</li>
		{% else %}
			<li>No item yet</li>
    	{% endfor %}
    </ul>
	
	<hr>

    Add a new item: <br>
    {{ form(newGameForm) }}
</div>
{% endblock %}
